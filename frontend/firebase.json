{
  "emulators": {
    "auth": {
      "port": 8000
    },
    "firestore": {
      "port": 8200
    },
    "ui": {
      "host": "localhost",
      "port": 4000,
      "enabled": true
    },
    "singleProjectMode": true
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ]
}
